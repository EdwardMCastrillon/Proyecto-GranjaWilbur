rojo_pag = #FF1D0D
amarillo_pag = #F5FF0D
rojo2 = #BE1F12

@font-face {
	font-family: 'Wilbur';
	src:url('../fonts/Wilbur.eot?bk6yrf');
	src:url('../fonts/Wilbur.eot?#iefixbk6yrf') format('embedded-opentype'),
		url('../fonts/Wilbur.woff?bk6yrf') format('woff'),
		url('../fonts/Wilbur.ttf?bk6yrf') format('truetype'),
		url('../fonts/Wilbur.svg?bk6yrf#Wilbur') format('svg');
	font-weight: normal;
	font-style: normal;
}

[class^="icon-"], [class*=" icon-"] {
	font-family: 'Wilbur';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.icon-icon-menu:before {
	content: "\e600";
}

.icon-icon-user:before {
	content: "\e604";
}

.icon-facebook:before {
	content: "\ea8d";
}

.icon-twitter:before {
	content: "\ea92";
}

.icon-youtube3:before {
	content: "\ea99";
}

.icon-linkedin:before {
	content: "\eac8";
}

body
	margin 0
	padding 0
	font-size 16px

.container
	background-image url('../images/granjaHome.jpg')
	background-attachment fixed
	height 100%
	width 100%
	position relative
	
.Entrada
	padding .5em
	display block
	width 100%
	background white
	text-align center
	font-size 1.5em
	input
		margin 1em .5em 0 0
		width 300px
		border-radius 15px
		border 2px solid rojo2
	label
		margin 1em .5em 0 0
	.button_procesos
		color white
		font-size 1em
		margin 2em auto !important
		margin-bottom 1em !important
		
#menu
	display none 	
.registro
	display none
	color white
	background black
	text-align center 
	padding 1em
	.button_registro
		margin 0 auto
		background rojo_pag
		width 180px
		height 30px
		font-family "Varela Round"
		font-size 1.3em
		padding 0 1em
		border-radius 4px
		cursor pointer
		border-style solid 
		border-color rojo2
		border-width 0px 0px 5px
	 
.sponsors
	margin-top .5em
	text-align center
	font-size 3em
	a
		text-decoration none
		padding .2em
		color white
		&:hover
			color amarillo_pag
	figure
		img
			width 225px
			height 200px
			border-radius 100%
			border 8px solid amarillo_pag	
			&:hover
				cursor pointer
				transform rotate(360deg)
				transition transform .3s ease-in-out

.position
	position absolute
	top 2em
	right 0	
	color white
	text-decoration none
	
.big	
	font-size 2.5em
	top .5em
	right .2em
		
header
	span
		font-family 'Varela Round'
		color white
	a
		color red
	
h1
	border-bottom 2px solid red
	text-align center
	padding 0
	font-family 'Lobster'
	letter-spacing 2px
	font-size 4em;
	margin 0
	color white
h2
	text-align center
	padding 0
	font-family 'Lobster'
	letter-spacing 2px
	font-size 3em;
	font-weight 400
	margin 0
	color white
	
	

