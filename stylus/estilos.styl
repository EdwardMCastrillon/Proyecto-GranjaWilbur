.contacto
	color white
	text-decoration none
	
footer
	background black
	color white
	height auto
	text-align center
	padding 1em
	.redes 
		text-align center
		font-size 3em
		a
			text-decoration none
			padding .2em
			color white
			&:hover
				color amarillo_pag
	
