				content "-"
			&:last-child:before
				content "-"
				
		.redes 
			text-align center
			font-size 2em
			margin-top 0.3em
			
	.button_procesos
		height 20px
		width 150px 
		margin 0 auto
		font-family Varela Round
		background rojo_pag
		border-radius 3px
		cursor pointer
		text-transform uppercase 
		border-style solid 
		border-color rojo2
		border-width 0px 0px 5px
		padding-top 8px
				
	.redBackground
			width 70%
			height auto

	h2
		font-size 1.5em
		width 100%
