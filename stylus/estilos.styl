body
	margin 0
	padding 0
	font-size 16px

.container
	background-image url('../images/granjaHome.jpg')
	background-attachment fixed
	height 100%
	width 100%
	position relative
.sponsors
	margin-top .5em
	text-align center
	font-size 3em
	a
		text-decoration none
		padding .2em
		color white
		&:hover
			color amarillo_pag
	figure
		img
			width 225px
			height 200px
			border-radius 100%
			border 8px solid amarillo_pag	
			&:hover
				cursor pointer
				transform rotate(360deg)
				transition transform .3s ease-in-out

.position
	position absolute
	top 2em
	right 0	
	color white
	text-decoration none		
		
header
	span
		font-family 'Varela Round'
		color white
	a
		color red
	
h1
	border-bottom 2px solid red
	text-align center
	padding 0
	font-family 'Lobster'
	letter-spacing 2px
	font-size 4em;
	margin 0
	color white
h2
	text-align center
	padding 0
	font-family 'Lobster'
	letter-spacing 2px
	font-size 3em;
	font-weight 400
	margin 0
	color white
	
	

//OOCSS
.seccion
	padding 0
	margin 8em 0
	height 17em
	width 100%
	background black
	color white	
	p
		font-family Varela Round
		margin 1em 4em
.button
	height 25px
	width 90px
	margin 0 3em 0 0
	font-family Varela Round
	text-align center
	background rojo_pag
	border-radius 5px
	cursor pointer
	border-style solid 
	border-color amarillo_pag
	border-width 0px 0px 5px
	padding-top 8px

.right
	float right	
.left
	float left
.white
	background white
	p
		color black

.redBackground
	border-bottom 2px solid red
	border-radius 5px
	margin 0 auto
	width 45%
	height auto
	background red
.margin-top
	margin-top 2em !important


.seccionProcess
	padding 0
	margin 8em 0
	height auto
	width 100%
	background white
	color white	
	p
		font-family Varela Round
		margin 1em 4em
	.process
		width 18em
		margin 2em
		display inline-block
		.name
			font-family 'Roboto' sans-serif
			font-size 2rem
			padding-bottom .5em
			border-bottom 2px solid black
		.image
			margin 0
			padding 0  
	 	
.input
	width 20em
	display inline-block
	color black
	margin-top 2em
	text-align center
	span
		color white
		font-size 1.5em
		text-shadow 1px 1px 2px white, 0, 0 0 0.2em white;
	
.contacto
	color white
	text-decoration none
	
@media screen and (max-width:480px)
	.container
		position relative
		h1
			text-align center
			font-size 1.7em
			margin 0
			padding 0
			
		.position
			position absolute
			top .1em
			right .4em
			font-size 1.8em
			color white

		.registro
			display none
			color white
			background black
			text-align center 
			padding 1em 
			.button_registro
				margin 0 auto
				background rojo_pag
				width 130px
				height 30px
				font-family "Varela Round"
				font-size 1.3em
				padding 0.3em 0.5em
				border-radius 6px
				cursor pointer
				border-style solid 
				border-color rojo2
				border-width 0px 0px 5px
				
		.sponsors
			margin-top .5em
			text-align center
			font-size 2em
			a
				text-decoration none
				padding .2em
				color white
				&:hover
					color amarillo_pag
			figure
				img 
					width 190px
					height 168px
					border-radius  100%
					border 6px solid amarillo_pag 
					&:hover
						cursor pointer
						transform rotate(360deg)
						transition transform .3s ease-in-out
					
	.seccion
		height 22em 
					
		p
			margin 1em 2em
			font-size 0.8em
			
	.seccionProcess
		background #e6e6e6
		p
			margin 1em 2em
			font-size 0.8em
			
		.process
			background white
			width 17em
			padding 0 0 0 1em
			margin 0 0 2em 1em 
			border-top 3px solid rojo_pag
			.image
				img 
					width 270px
					height 194px
				.borders
					border 2px solid amarillo_pag 
			.name
				font-size 1.5rem
				padding-bottom .3em
				text-align center 
				
	.button
		height 20px
		width 80px
		margin 0 1.5em 0 0
		font-family Varela Round
		text-align center
		background rojo_pag
		border-radius 5px
		cursor pointer
		border-style solid 
		border-color rojo2
		border-width 0px 0px 5px
		padding-top 8px			
			
	.redBackground
			width 65%
			height auto

	h2
		font-size 1.5em
		width 100%
