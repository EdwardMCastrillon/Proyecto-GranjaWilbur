
rojo_pag = #FF1D0D
amarillo_pag = #F5FF0D
rojo2 = #BE1F12

body
	font-size 16px
		
h1
	font-family 'Lobster'
	font-size 3em
	text-align center
	background rgb(38,38,38)
	color white
	

figure
	position absolute
	top 0
	right 0
	margin-right 3em
	
	img		
		width 170px
		height 151px
		border-radius 50%
		border 8px amarillo_pag solid

div 
	display inline-block
	margin 0

form 
	position relative
	height 20em
	text-align center
	
	input
		border-radius 3px
		border 1px black solid
		height 2em
		margin-bottom 1em
		
	p
		margin 0
		padding 0
		font-family 'Varela Round'
	
	.izquierda
		height 7em
		margin-top 1em
		text-align left
		margin-right 5em
		
	.derecha
		text-align left
		margin-left 5em
			
	select
		border-radius 3px
		border 1px black solid
		height 2.3em
		width 13em
		margin-bottom 1em
		font-family 'Varela Round'
	
	.botones
		width 100%
		position absolute
		bottom 0
		left 0em		
		
		.boton
			padding .5em 1em
			margin-left 1em
			background rojo_pag
			width 6em
			cursor pointer
			border-radius 4px
			border-bottom 5px rojo2 solid
			transition .2s
			font-family 'Varela Round'
			&:active
				width 5.5em
				height 1em
				font-size 14px
				
		

